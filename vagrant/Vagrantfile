vm_name = File.basename(Dir.getwd)
host_mount_path = File.expand_path("~/vm-workspace")
project_dir = File.dirname(__FILE__)
identity_file = File.join(project_dir, ".vagrant/machines/default/utm/private_key")
ENV['VAGRANT_DEFAULT_PROVIDER'] = 'utm'

Vagrant.configure("2") do |config|

  # Mount VM workspace to host after VM is up
  config.trigger.after :up do |trigger|
    trigger.info = "Mounting VM workspace to #{host_mount_path}..."
    trigger.run = {
      path: "mount-vm.sh",
      args: [host_mount_path, identity_file]
    }
  end

  # Unmount before halt/destroy
  config.trigger.before [:halt, :destroy] do |trigger|
    trigger.info = "Unmounting #{host_mount_path}..."
    trigger.run = {
      path: "unmount-vm.sh",
      args: [host_mount_path]
    }
  end
  config.vm.box = "bento/ubuntu-24.04"

  #config.vm.network "forwarded_port", guest: 3000, host: 3000, auto_correct: true
  config.vm.synced_folder ".", "/vagrant", disabled: true

  config.vm.provider "utm" do |utm|
    utm.memory = 4096
    utm.cpus = 2
    utm.name = vm_name
  end

  config.vm.provider "virtualbox" do |vb|
    vb.memory = "4096"
    vb.cpus = 2
    vb.gui = false
    vb.name = vm_name
    vb.customize ["modifyvm", :id, "--audio", "none"]
    vb.customize ["modifyvm", :id, "--usb", "off"]
  end
  
  config.vm.provision "shell", inline: <<-SHELL
    export DEBIAN_FRONTEND=noninteractive

    apt-get update
    apt-get install -y docker.io nodejs npm git unzip
    npm install -g @anthropic-ai/claude-code --no-audit

    mkdir -p /agent-workspace
    usermod -aG docker vagrant
    chown -R vagrant:vagrant /agent-workspace

  SHELL
end
